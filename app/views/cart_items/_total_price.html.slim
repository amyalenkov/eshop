- cart_item = @cart_item if cart_item.nil?
- amount = cart_item.product.get_price.gsub(/\s+/,'').to_i * cart_item.count.to_i
- second_part = amount.to_s[-3, 3]
- first_part = amount.to_s.gsub(/.{3}$/, '')
- amount = first_part + ' ' + second_part.to_s
- new_amount = (cart_item.product.get_new_price * cart_item.count.to_i).round 2
= text_field_tag "total_price_quant[#{cart_item.id}]",amount, :readonly => true, :disabled => true, :class => 'amount'
= text_field_tag '',new_amount, :readonly => true, :disabled => true, :class => 'amount new_amount'
