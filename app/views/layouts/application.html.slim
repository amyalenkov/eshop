doctype html
html
  head
    title
      | Crafters
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  body
        .container-fluid
          .row
            .col-xs-12.col-sm-12.col-md-12.col-lg-12
              = render 'layouts/navigation'
              p.notice
                = notice
              p.alert
                = alert
              .content
                = yield
